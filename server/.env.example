# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Database
MONGODB_URI=mongodb://localhost:27017/tonpay-africa

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=tonpay_secret_key_change_in_production
JWT_REFRESH_SECRET=tonpay_refresh_secret_key_change_in_production

# Payment Providers
# Paystack (https://paystack.com)
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key

# VTPass (https://www.vtpass.com)
VTPASS_API_KEY=your_vtpass_api_key
VTPASS_PUBLIC_KEY=your_vtpass_public_key

# Email Service (SendGrid - https://sendgrid.com)
SENDGRID_API_KEY=SG.your_sendgrid_api_key
FROM_EMAIL=noreply@tonpayafrica.com

# SMS Service (Twilio - https://www.twilio.com)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# KYC Verification Services
BVN_VERIFICATION_API_KEY=your_bvn_verification_api_key
NIN_VERIFICATION_API_KEY=your_nin_verification_api_key

# TON Blockchain
TONCENTER_API_KEY=your_toncenter_api_key
TONAPI_KEY=your_tonapi_key

# File Storage (Cloudinary - https://cloudinary.com)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
